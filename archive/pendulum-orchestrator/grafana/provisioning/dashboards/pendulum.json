{
  "uid": "pendulum-dashboard",
  "title": "pendulum-dashboard",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "bargauge",
      "title": "simulation_time",
      "id": 1,
      "gridPos": { "x": 15, "y": 0, "w": 3, "h": 13 },
      "targets": [
        { "expr": "simulation_time_second" }
      ],
      "options": {
        "orientation": "vertical"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0,
          "max": 600,
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        }
      }
    },
    {
      "type": "histogram",
      "title": "pendulum_period",
      "id": 2,
      "gridPos": { "x": 0, "y": 5, "w": 15, "h": 5 },
      "targets": [
        { "expr": "pendulum_period_second", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "pendulum_energy",
      "id": 3,
      "gridPos": { "x": 0, "y": 10, "w": 15, "h": 8 },
      "targets": [
        { "expr": "pendulum_energy_joule", "refId": "A" },
        { "expr": "pendulum_energy_target_joule", "refId": "B"}
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "J",
          "custom": { "drawStyle": "line" }
        }
      }
    }
  ]
}
